<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.Canal"
             Title="Canal">
    
    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="0,20,0,0">
        <StackLayout HorizontalOptions="FillAndExpand">
            <Image x:Name="imagenCanal" HeightRequest="100"/>
            <Label x:Name="nombreCanal" HorizontalOptions="Center"/>
            <Label x:Name="precioCanal" HorizontalOptions="Center"/>
            <Button x:Name="btnComprar" Text="Comprar" Clicked="btnComprar_Clicked"/>
        </StackLayout>
    </StackLayout>

</ContentPage>